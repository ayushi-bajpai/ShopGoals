<div style="background: rgb(211, 203, 203); width: 100%; height: 100%; margin: 0px; padding-top: 10px">
    <h1 style="text-align: center; color: rgb(28, 31, 196)">
        Ad: <%=ad.name %><br>
        Price quoted by seller: Rs. <%=ad.price %>
    </h1>


    <% if(user) { %>
        <div
            style="background: rgb(238, 233, 233); border: solid brown; border-width: 2px; padding: 10px; padding-top: 0px; width: 400px; margin-left: 450px">
            <% for(var i = 0; i< messages.length; i++){ %>
            <% if(messages[i].from != 'buyer'){ %>
            <div style="margin:10px; color: rgb(103, 17, 184);"><%=messages[i].message %></div><br>
            <% }else{ %>
            <div style="margin:10px; float: right; color: rgb(92, 173, 10)"><%=messages[i].message %></div><br>
            <% } %>
            <% } %>
        </div>
    
        <form method="post" style="text-align: center; margin-top: 10px; margin-left: 230px">
            <input name="msg" />
            <button type="submit">Reply</button>
        </form>
        <% }else{ %>
        <h1>
            <p style="text-align: center; color:rgb(177, 17, 52)">Please login to chat with seller</p>
        </h1>
        <% } %>
    </div>